{
  "name": "sanity-secrets",
  "version": "0.1.0",
  "description": "React hooks and UI for reading and managing secrets in a Sanity Studio. This is a good pattern for keeping configuration secret. Instead of using environment variables which would be bundled with the Studio source (it is an SPA), we store secret information in a document in the dataset. This document will not be readable to externals even in a public dataset. With custom access controls you can also specify which users can read the configuration in your Studio.",
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "dist/index.js",
  "module": "dist/sanity-secrets.esm.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "default": "./lib/esm/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && parcel build --no-cache",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint && eslint .",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "clean": "rimraf lib",
    "prebuild": "npm run clean && plugin-kit verify-package --silent",
    "watch": "parcel watch",
    "link-watch": "plugin-kit link-watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sanity-io/sanity-studio-secrets.git"
  },
  "engines": {
    "node": ">=10"
  },
  "typings": "dist/index.d.ts",
  "peerDependencies": {
    "@sanity/ui": "^0.36.12",
    "react": ">=16",
    "styled-components": "^5.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/sanity-studio-secrets/issues"
  },
  "homepage": "https://github.com/sanity-io/sanity-studio-secrets#readme",
  "size-limit": [
    {
      "path": "dist/sanity-secrets.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sanity-secrets.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@sanity/client": "^3.2.0",
    "@sanity/plugin-kit": "^1.0.2",
    "@sanity/semantic-release-preset": "^2.0.2",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-sanity": "^6.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {}
}